<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Software<small>Control panel</small></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
        
            <!-- left column -->
            <div class="col-md-12">

                <div class="box box-primary">
                
                    <div class="box-header with-border"><h3 class="box-title">New Software</h3></div>
                
                    <form role="form" id="software">
                
                        <div class="box-body">
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Original Title</label>
                                    <input type="text" class="form-control" id="originalTitle" name="originalTitle" placeholder="">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Translated Title</label>
                                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter software name">
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="country">Developed by</label>
                                    <select class="form-control" id="developer"></select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="country">Year</label>
                                    <select class="form-control" id="year"></select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="country">System</label>
                                    <select class="form-control" id="system"></select>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="country">Kind</label>
                                    <select class="form-control" id="kind"></select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="country">Genre</label>
                                    <select class="form-control" id="genre">
                                    <% genres.forEach(function(genre) {%>
                                        <option value="<%=genre.id%>"><%=genre.name%></option>
                                    <%});%>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="country">Country</label>
                                    <select class="form-control" id="country">
                                    <% countries.forEach(function(country) {%>
                                        <option value="<%=country.id%>"><%=country.name%></option>
                                    <%});%>
                                    </select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="country">Language</label>
                                    <select class="form-control" id="language"></select>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="country">License</label>
                                    <select class="form-control" id="license"></select>
                                </div>
                            </div>
    
                        </div>
      
                        <div class="box-footer">
                            <button type="button" id="submit" class="btn btn-primary">Submit</button>
                        </div>
                
                    </form>
                
                </div>

            </div>

        </div>

    </section>
</div>

<script>
$("#submit").click(function() {
    $.ajax({
        url: '/software',
        dataType: 'json',
        type: 'post',
        contentType: 'application/x-www-form-urlencoded',
        data: {
            "name": $("#name").val(),
            "country": $("#country").val(),
        },
        success: function( data, textStatus, jQxhr ){
            $('#response pre').html( data );
        },
        error: function( jqXhr, textStatus, errorThrown ){
            console.log( errorThrown );
        }
    });
});

$(function() {
    console.log( "ready!" );

    $.ajax({
        url: '/software',
        type: 'get',
        success: function( softwares, textStatus, jQxhr ){
            console.log(softwares);
        },
        error: function( jqXhr, textStatus, errorThrown ){
            console.log( errorThrown );
        }
    });

});
</script>